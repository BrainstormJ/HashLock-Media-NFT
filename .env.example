# HashLock Media NFT - Environment Variables
# Copy this file to .env and add your actual values

# RPC URLs (Get from Infura, Alchemy, or other providers)
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
GOERLI_RPC_URL=https://goerli.infura.io/v3/YOUR_INFURA_KEY
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
POLYGON_RPC_URL=https://polygon-rpc.com
MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com

# Private Key (⚠️ NEVER commit this file with real keys!)
# Export from MetaMask: Account Details → Export Private Key
PRIVATE_KEY=your_private_key_without_0x_prefix

# Etherscan API Keys (for contract verification)
ETHERSCAN_API_KEY=your_etherscan_api_key
POLYGONSCAN_API_KEY=your_polygonscan_api_key

# Optional - Gas reporting
REPORT_GAS=false
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# ⚠️ IMPORTANT SECURITY NOTES:
# - Never commit .env file to version control
# - Keep your private keys secure
# - Use different wallets for testing and production
# - Consider using a hardware wallet for mainnet
